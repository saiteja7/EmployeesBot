{
    "info": {
        "_postman_id": "ieba-server-collection",
        "name": "IEBA Server API",
        "description": "Collection to test IEBA Server endpoints on Azure",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Get All Employees",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/employees",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "employees"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Query Employees (SQL)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"sqlQuery\": \"SELECT * FROM c WHERE c['Job Level'] = '3P'\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/employees/query",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "employees",
                        "query"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Add Employee",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"Name\": \"Test Employee\",\n    \"Job Level\": \"2P\",\n    \"Team Name\": \"Test Team\",\n    \"Billing Rate\": 100\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/employees",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "employees"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Upload Excel",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "file",
                            "type": "file",
                            "src": []
                        }
                    ]
                },
                "url": {
                    "raw": "{{baseUrl}}/api/upload",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "upload"
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "https://ieba-server-free-deploy.azurewebsites.net",
            "type": "string"
        }
    ]
